<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" version="3.0" method="upgrate">
	<name>Wichlacz</name>
	<author>Bairo</author>
	<description>Wichlacz component</description>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.sql</file>
		</sql>
	</install>
	
	<files folder="site">
		<filename>index.html</filename>
		<filename>wichlacz.php</filename>
		<filename>controller.php</filename>
		<folder>css</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	
	<languages folder="site">
		<language tag="ru-RU">language/ru-RU/ru-RU.com_wichlacz.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.com_wichlacz.sys.ini</language>
	</languages>
	
	<administration>
		<menu>COM_WICHLACZ_SECTION</menu>
		
		<files folder="admin">
			<filename>index.html</filename>
			<filename>wichlacz.php</filename>
			<filename>controller.php</filename>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>controllers</folder>
			<folder>models</folder>
			<folder>helpers</folder>
			<folder>css</folder>
			<folder>js</folder>
		</files>
		
		<languages folder="admin">
			<language tag="ru-RU">language/ru-RU/ru-RU.com_wichlacz.ini</language>
			<language tag="ru-RU">language/ru-RU/ru-RU.com_wichlacz.sys.ini</language>
		</languages>
	</administration>
</extension>